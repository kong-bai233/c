/*2021.6.27*/
#include <stdio.h>
int main()
{
	float m,kg,bmi;
	int a;
    printf("请输入你的体重(kg)：");
    scanf("%g",&kg);
    printf("请输入你的身高(m):");
	scanf("%g",&m); 
	bmi=kg/(m*m);
	printf("结果：%.1f\n",bmi);
	if (bmi<18.5){                                                  
		a=1; 
	} 
	else if (18.5<=bmi&&bmi<=23.9){
		a=2; 
	}
	   if (24<=bmi&&bmi<=27){
		a=3;
	}
	   else if (28<=bmi&&bmi<=32){
		a=4;
	}
	     if (bmi>32){
		a=5;
	}
	switch (a){
		case 1:printf("偏瘦");break;
		case 2:printf("正常");break;
		case 3:printf("偏胖");break;
		case 4:printf("肥胖");break;
		case 5:printf("超重");break; 
	}
    return 0;   
}
//kong-bai233 and huanghaozi
